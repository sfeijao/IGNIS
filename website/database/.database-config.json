{
    "name": "YSNM Dashboard Database",
    "description": "SQLite database for YSNM Discord Bot Dashboard",
    "type": "SQLite",
    "version": "3.0",
    "schemas": [
        {
            "name": "main",
            "file": "schema.sql",
            "description": "Main database schema with all tables"
        }
    ],
    "tables": [
        "users",
        "guilds", 
        "guild_members",
        "moderation_actions",
        "automod_rules",
        "tickets",
        "ticket_users",
        "ticket_messages",
        "guild_settings",
        "analytics",
        "warnings",
        "command_usage",
        "logs"
    ],
    "indexes": [
        "idx_users_discord_id",
        "idx_guilds_discord_id",
        "idx_guild_members_guild_user",
        "idx_moderation_actions_guild",
        "idx_tickets_guild_status",
        "idx_ticket_users_ticket_id",
        "idx_ticket_users_user_id",
        "idx_logs_guild_type",
        "idx_analytics_guild_type_date",
        "idx_warnings_guild_user"
    ]
}
