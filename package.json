{
  "name": "ignis-community-bot",
  "version": "2.1.1",
  "description": "ü§ñ Bot Discord completo para IGNIS Community com sistema de verifica√ß√£o, tags, status roxo e administra√ß√£o avan√ßada",
  "main": "index.js",

  "repository": {
    "type": "git",
    "url": "git+https://github.com/sfeijao/IGNIS_BOT.git"
  },
  "keywords": [
    "discord",
    "bot",
    "ignis",
    "community",
    "slash-commands",
    "discord.js",
    "verification",
    "moderation",
    "railway",
    "purple-theme"
  ],
  "author": "IGNIS Community",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sfeijao/IGNIS_BOT/issues"
  },
  "homepage": "https://github.com/sfeijao/IGNIS_BOT#readme",
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "connect-mongo": "^5.1.0",
    "discord.js": "^14.14.1",
    "dotenv": "^16.3.1",
    "express": "^4.21.2",
    "express-rate-limit": "^8.0.1",
    "express-session": "^1.18.2",
    "helmet": "^8.1.0",
    "joi": "^18.0.1",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.30.1",
    "mongodb": "^6.20.0",
    "mongoose": "^8.19.1",
    "multer": "^2.0.2",
    "node-fetch": "^2.7.0",
    "passport": "^0.7.0",
    "passport-discord": "^0.1.4",
    "puppeteer": "^24.18.0",
    "rate-limiter-flexible": "^7.2.0",
    "socket.io": "^4.8.1",
    "sqlite3": "^5.1.7",
    "winston": "^3.9.0",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "mocha": "^10.2.0",
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.4",
    "mongodb-memory-server": "^10.1.4",
    "body-parser": "^1.20.2",
    "markdownlint-cli2": "^0.15.0",
    "typescript": "^5.6.3",
    "ts-node": "^10.9.2",
    "@types/node": "^20.11.30"
  },
  "jest": {
    "testEnvironment": "node",
    "roots": ["<rootDir>/tests"],
    "verbose": true
  },
  "scripts": {
    "start": "node railway-start.js",
    "start:local": "node scripts/deploy-commands.js && node index.js",
    "start:bot-only": "node scripts/deploy-commands.js && node bot-only.js",
    "start:health": "node health-check.js",
    "dev": "nodemon index.js",
    "dev:ts": "nodemon --exec ts-node src/bootstrap.ts",
    "build:ts": "tsc -p tsconfig.json",
    "backup": "node scripts/backup-export.js",
    "migrate:sqlite-to-mongo": "node scripts/migrate-storage.js sqlite-to-mongo",
    "migrate:mongo-to-sqlite": "node scripts/migrate-storage.js mongo-to-sqlite",
    "test:e2e": "node website/tools/e2e-ticket-test.js",
    "test:unit": "node website/tools/unit-tests.js",
    "deploy": "node scripts/deploy-commands.js",
    "deploy:global": "node scripts/deploy-commands.js --global",
    "deploy:list": "node scripts/deploy-commands.js --list",
    "deploy:clear": "node scripts/deploy-commands.js --clear",
  "deploy:diagnostic": "node scripts/deploy-diagnostic.js",
    "env:check": "node scripts/check-env.js",
    "server": "node website/server.js",
    "database:backup": "node -e \"require('./website/database/database').backupDatabase()\"",
    "logs:clean": "node -e \"require('./utils/logger').cleanOldLogs()\"",
    "mongo:test": "node scripts/test-mongo.js",
    "mongo:resolve": "node scripts/resolve-srv.js",
    "restart": "taskkill /f /im node.exe >nul 2>&1 & timeout /t 2 /nobreak >nul & node index.js",
    "clean-start": "restart-bot.bat",
    "test": "jest",
    "test:giveaways": "jest --runTestsByPath tests/giveaways/rng.test.js tests/giveaways/integration.test.js",
    "test:private-receiver": "mocha ./examples/private-receiver/tests --timeout 10000",
    "test:ci": "npm run test:giveaways",
    "smoke:fetch": "node website/tools/e2e-smoke-fetch.js",
    "smoke:headless": "node website/tools/e2e-smoke-headless.js",
    "smoke:local": "powershell -NoProfile -ExecutionPolicy Bypass -File scripts/run-smoke-local.ps1",
    "lint:md": "npx --yes markdownlint-cli2 README.md README-LOCAL.md README-SQLITE.md README-CI.md website/README.md README-GIVEAWAYS.md || exit 0"
  },
  "engines": {
    "node": ">=18 <=22",
    "npm": ">=8"
  },
  "packageManager": "npm@10.9.3"
}
